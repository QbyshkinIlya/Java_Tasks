<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="470.0" prefWidth="662.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="LabelGo">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <HBox fx:id="Chest" prefHeight="100.0" prefWidth="200.0">
            <children>
                <ImageView fx:id="Ris1" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#OnMouseClickImg" pickOnBounds="true" preserveRatio="true">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin></ImageView>
                <ImageView fx:id="Ris2" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#OnMouseClickImg" pickOnBounds="true" preserveRatio="true">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin></ImageView>
                <ImageView fx:id="Ris3" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#OnMouseClickImg" pickOnBounds="true" preserveRatio="true" />
            </children>
        </HBox>
        <HBox prefHeight="104.0" prefWidth="622.0">
            <children>
                <AnchorPane prefHeight="128.0" prefWidth="600.0">
                    <children>
                        <Label fx:id="coin" layoutX="62.0" layoutY="14.0" prefHeight="26.0" prefWidth="90.0" text="Игрок">
                            <font>
                                <Font size="14.0" />
                            </font></Label>
                        <Label layoutX="398.0" layoutY="14.0" prefHeight="26.0" prefWidth="159.0" text="Автомат">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="moneyofPlayer" layoutX="79.0" layoutY="50.0" text="0">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="statusLabel" layoutX="242.0" layoutY="37.0" text="statusLabel" visible="false">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                  <Label fx:id="moneyofAutomat" layoutX="427.0" layoutY="55.0" prefHeight="20.0" prefWidth="70.0" text="0">
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                    </children>
                </AnchorPane>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <AnchorPane prefHeight="100.0" prefWidth="629.0">
                    <children>
                        <Button layoutX="447.0" layoutY="35.0" mnemonicParsing="false" onAction="#onEnd" prefHeight="30.0" prefWidth="119.0" text="Окончить игру!">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button layoutX="27.0" layoutY="35.0" mnemonicParsing="false" onAction="#onGo" text="Поехали!">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button layoutX="125.0" layoutY="35.0" mnemonicParsing="false" onAction="#addMoney" text="Добавить монеты!">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                </AnchorPane>
            </children>
        </HBox>
    </children>


</VBox>
